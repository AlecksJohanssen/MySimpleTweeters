<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivAva" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minWidth="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/tvName"
                    android:layout_marginLeft="5dp"
                    android:textColor="#4099FF"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/tvScreenName"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="184dp"
                    android:layout_height="fill_parent"
                    android:text="Date"
                    android:id="@+id/tvDate"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="340dp"
                android:id="@+id/ivPictures"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BodyText"
                android:autoLink="all"
                android:linksClickable="true"
                android:textColorLink="#4099FF"
                android:id="@+id/tvBodyText"
                android:layout_marginLeft="5dp"
                android:clickable="true"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivFavorite"
                    android:layout_width="@dimen/DPScaler"
                    android:layout_height="@dimen/DPScaler"
                    android:src="@drawable/ic_star"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="75dp"/>
                <ImageView
                    android:id="@+id/ivReply"
                    android:layout_width="@dimen/DPScaler"
                    android:layout_height="@dimen/DPScaler"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_arrow_reply"/>
                <ImageView
                    android:id="@+id/ivRetweet"
                    android:layout_width="@dimen/DPScaler"
                    android:layout_height="@dimen/DPScaler"
                    android:layout_marginLeft="90dp"
                    android:src="@drawable/ic_retweet"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>